<?xml version="1.0" encoding="UTF-8"?>  <!-- Log4J Configuration for online -->
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Appenders -->
    <appender name="appAppender" class="org.apache.log4j.DailyRollingFileAppender">
       <param name="File" value="/www/logs/portal/portal_${log.port}.log" />
       <param name="Encoding" value="UTF-8"/>
       <param name="Append" value="true" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
       <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%d %p [%t] %c{1} |%X{ssoUserId}| %m%n" />
       </layout>
     </appender>
     
	<appender name="eiAppender" class="org.apache.log4j.DailyRollingFileAppender">
       <param name="File" value="/www/logs/portal/portal_${log.port}_ei.log" />
       <param name="Encoding" value="UTF-8"/>
       <param name="Append" value="true" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
       <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%d %p [%t] %c{1} |%X{ssoUserId}| %m%n" />
       </layout>
     </appender>
     
	<appender name="errorAppender" class="org.apache.log4j.DailyRollingFileAppender">
       <param name="File" value="/www/logs/portal/portal_${log.port}_error.log" />
       <param name="Encoding" value="UTF-8"/>
       <param name="Append" value="true" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
       <layout class="org.apache.log4j.PatternLayout">
           <param name="ConversionPattern" value="%d %p [%t] %c{1} |%X{ssoUserId}| %m%n" />
       </layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">  
	             <param name="LevelMax" value="ERROR" />  
	             <param name="LevelMin" value="ERROR" />  
	     </filter>         
     </appender>
	
	<!-- Application Loggers -->
	<logger name="com.toney">
		<level value="INFO" />
	</logger>
	
	
	<!-- Exception Loggers, suggest let it output to error  file in online env -->
	<logger name="com.toney.mvc.web.exception.resolver.SimplePortalMappingExceptionResolver">
		<level value="INFO" />
		<appender-ref ref="errorAppender" />
	</logger>
	
	<!-- BoneCP Loggers, suggest let it output to a file in online env-->
	<logger name="com.jolbox.bonecp">
		<level value="WARN" />
	</logger>
	
	<!-- Spring Loggers -->
    <logger name="org.springframework">
        <level value="WARN"/>
    </logger>

	<logger name="org.springframework.web">
		<level value="WARN" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="INFO" />
		<appender-ref ref="appAppender" />
		<appender-ref ref="errorAppender" />
	</root>
	
</log4j:configuration>
