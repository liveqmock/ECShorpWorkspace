<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ecs.cms.admin.dao.RoleMenuDao">
	<resultMap id="roleMenuResult" type="roleMenu">
		<result property="id" column="id" />
		<result property="roleId" column="role_id" />
		<result property="menuId" column="menu_id" />
		<result property="createDt" column="create_dt" />
		<result property="version" column="version" />
	</resultMap>
	
	<!-- 根据角色ID查询 -->
	<select id="getRoleMenubyroleId" resultMap="roleMenuResult" parameterType="java.lang.Long">
		<![CDATA[select * from xec_mgr_role_menu where role_id=#{roleId}]]>
	</select>
	
	<!-- 根据角色Id删除 -->
	<delete id="deleteRoleMenu" parameterType="java.lang.Long">
	   <![CDATA[delete from xec_mgr_role_menu where role_id=#{roleId}]]>
	</delete>
	
	<!-- 添加角色对应菜单权限 -->
	<insert id="addRoleMenu" parameterType="roleMenu">
		insert into
		xec_mgr_role_menu (role_id, menu_id, create_dt,version)
		values(#{roleId},#{menuId},#{createDt},1)
	</insert>
	
</mapper>